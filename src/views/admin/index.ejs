<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head',{title:"Administrador"}) %>

    <body class="admin">
        <%- include('./partials/header') %>

            <main class="container">
                <div class="card my-3 shadow" >
                    <div class="card-header">
                        <div class="row">
                            <div class="col-12 col-md-6"></div>
                            <div class="col-12 col-md-6 my-2 d-flex justify-content-end">
                                <ul class="pagination pagination-sm" id="box-paginator">

                                </ul>
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="col-12 col-md-2">
                                <form action="">
                                    <select class="form-select" name="" id="select-filter">
                                        <option value="" selected hidden>Filtrar</option>
                                    </select>
                                </form>
                            </div>
                            <div class="col-12 col-md-2">
                                <form action="">
                                    <select class="form-select" name="" id="select-order">
                                        <option value="" selected hidden>Ordenar</option>
                                        <option value="name">Producto</option>
                                        <option value="price">Precio</option>
                                        <option value="categoryId">Categoría</option>
                                        <option value="id">Default</option>
                                    </select>
                                </form>
                            </div>
                            <div class="col-12 col-md-2">
                                <form action="">
                                    <select class="form-select" name="" id="select-view">
                                        <option value="" selected hidden>Mostrar</option>
                                        <option value="10">10</option>
                                        <option value="25">25</option>
                                        <option value="50">50</option>
                                        <option value="100">100</option>
                                    </select>
                                </form>
                            </div>
                            <div class="col-12 col-md-6">
                                <form class="d-flex" action="/admin/search">
                                    <input class="form-control me-2" type="search" placeholder="Search"
                                        aria-label="Search" name="search">
                                    <button class="btn btn-outline-dark" type="submit">Buscar</button>
                                </form>
                            </div>
                        </div>
                        <div class="table-responsive">
                           
                        <div class="card-body">
                            <table class="table table-hover" style="height:600px">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Producto</th>
                                        <th scope="col">Precio</th>
                                        <th scope="col">Categoría</th>
                                        <th scope="col">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody id="table-products" >


                                </tbody>
                            </table>

                        </div>

                    </div>
                </div>

            </main>
            <%- include('../partials/scripts') %>
                <script src="/javascripts/admin.js"></script>
    </body>

</html>